import tkinter
from tkinter import *
from tkinter import messagebox
root = Tk()
root.title('  Welcome to VORTEX')
root.geometry("600x700")
root.config(bg="teal")

lb0 =Label(root,text="VORTEX courier services",bg="black",fg="white" ,width=20,font=("calibri bold",20))
lb0.place(x=110,y=40)
