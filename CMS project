lb1.place(x=70,y=130)
entry_1=Entry(root)
entry_1.place(x=240,y=130)
lb2 =Label(root,text="Phone no",bg="teal",fg="black", width=20,font=("calibri",13))
lb2.place(x=58,y=180)
entry_3=Entry(root)
entry_3.place(x=240,y=180)

lb3 =Label(root,text="Receiver Add",bg="teal",fg="black", width=20,font=("calibri",13))
lb3.place(x=68,y=230)
